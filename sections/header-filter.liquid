{% if collections.length > 1 %}
  <div class="header-{{ section.id }}">
    <a href="../">All Products</a>
    {% for collection in collections %}
      <a href="../?filter={{ collection.title }}">{{ collection.title }}</a>
    {% endfor %}
  </div>
{% endif %}

{% style %}
  .header-{{ section.id }} {
    position:fixed;
    display:{{ section.settings.product_filter_visible }};
    bottom:0;
    left:0;
    width:100vw;
    overflow:hidden;
    pointer-events:none;
    flex-direction:column;
    align-items:flex-start;
    box-sizing:border-box;
    padding:1em;
    z-index:2;
    font-size: {{ section.settings.filter-dropdown-font-scale }}%;
    color: {{settings.color-scheme-title}};
    line-height:1.6;
    @media screen and (min-width: 320px) and (max-width: 767px) and (orientation: portrait) {
      bottom:1em;
    }
  }
  .header-{{ section.id }} a {
    pointer-events: all;
  }
  .header-{{ section.id }} a:nth-child(1) {
    margin-bottom:1em;
  }
  .header-{{ section.id }} a:nth-child(n+1):hover {
    background-color:{{settings.color-scheme-button-bg}};
    color:{{settings.color-scheme-button-text}};
  }
{% endstyle %}

{% schema %}
  {
    "name": "Filters",
    "settings": [
      {
        "type": "range",
        "id": "filter-dropdown-font-scale",
        "min": 100,
        "max": 200,
        "default": 120,
        "label": "Filter Menu Scale"
      },
      {
        "type": "radio",
        "id": "product_filter_visible",
        "label": "Show/Hide Filters",
        "options": [
          {
            "label": "show",
            "value": "flex"
          },
          {
            "label": "hide",
            "value": "none"
          }
        ]
      }
    ]
  }
{% endschema %}