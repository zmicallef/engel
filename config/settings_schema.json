        "default": "inter_n3"
      },
      {
        "type": "range",
        "id": "type_body_spacing",
        "label": "Bodycopy Font Spacing",
        "min": 0,
        "max": 5,
        "step": 1,
        "default": 2
      },
      {
        "type": "range",
        "id": "type_body_lineheight",
        "min": 9,
        "max": 15,
        "step": 1,
        "label": "Bodycopy Font Lineheight",
        "default": 12
      },
      {
        "type": "range",
        "id": "type_body_weight",
        "label": "Bodycopy Font Weight",
        "min": 200,
        "max": 800,
        "step": 100,
        "default": 400
      },
            {
        "type": "range",
        "id": "type_body_size",
        "label": "Bodycopy Font Size",
        "min": 5,
        "max": 15,
        "step": 1,
        "default": 7
      },
    ]
  },
  {
    "name": "Color Scheme",
    "settings": [
      {
        "type": "color",
        "id": "color-scheme-title",
        "label": "Title Color"
      },
      {
        "type": "color",
        "id": "color-scheme-text",
        "label": "Text Color"
      },
      {
        "type": "color",
        "id": "color-scheme-button-bg",
